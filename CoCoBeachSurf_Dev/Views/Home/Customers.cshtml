@model IEnumerable<AuthModule.Models.tblCustomers>

@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CstmrID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CstmrFN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CstmrLN)
