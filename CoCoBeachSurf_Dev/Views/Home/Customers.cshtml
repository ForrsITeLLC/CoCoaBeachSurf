        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CstmrActv)
        </td>
        <td>
           
            @Html.ActionLink(" ", "EditCustomer", "Home", new { @CustomerId = @item.CstmrID }, new { @class = "btn btn-warning fa fa-pencil" })
