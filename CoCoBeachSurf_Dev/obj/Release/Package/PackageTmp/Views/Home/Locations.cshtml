@model List<AuthModule.Models.tblLocations>

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />


<h1>Locations</h1>
<br />
<table class="table table-bordered" style="text-align:center">
    <tr>
        <th style="text-align:center">Id</th>
        <th style="text-align:center">Type</th>
        <th style="text-align:center">Name</th>
        <th style="text-align:center">Description</th>
        <th style="text-align:center">Address</th>
        <th style="text-align:center">Active</th>
        <th style="text-align:center">Default</th>
        <th style="text-align:center"> @Html.ActionLink("New", "AddLocation", "Home", new { @type = "" }, new { @class = "btn btn-success" }) </th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.lctn_UnqID)</td>
                <td>@Html.DisplayFor(modelItem => item.lctn_tpe)</td>
                <td>@Html.DisplayFor(modelItem => item.lctn_nme)</td>
                <td>@Html.DisplayFor(modelItem => item.lctn_dsc)</td>
                <td style="width:100px">@Html.DisplayFor(modelItem => item.lctn_address)</td>
                <td>@Html.DisplayFor(modelItem => item.lctn_active)</td>
                <td>@Html.DisplayFor(modelItem => item.lctn_dflt)</td>

                <td calss="">
                    @Html.ActionLink(" ", "EditLocation", "Home", new { @LocationId = @item.lctn_Id }, new { @class = "btn btn-warning fa fa-pencil" })
                    @Html.ActionLink(" ", "DeleteLocation", "Home", new { @LocationId = @item.lctn_Id }, new { @class = "btn btn-danger fa fa-trash" })
                   
                </td>


            </tr>
        }
    }
</table>



<script>
    function deletDevice(e) {
        debugger;
        if (confirm("Are you sure you want to delete this?")) {
            var id = e.name;
            window.location.href = '/Home/deleteDevice?Id=' + id;
        }
    }
</script>