@model List<AuthModule.Models.tblLocationType>

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />


<h1>Location Types</h1>
<br />
<table class="table table-bordered" style="text-align:center">
    <tr>
        <th style="text-align:center">Type</th>
        <th style="text-align:center">Description</th>
        <th style="text-align:center">Active</th>
        <th style="text-align:center"> @Html.ActionLink("New", "AddLocationType", "Home", new { @type = "" }, new { @class = "btn btn-success" })</th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.lctn_tpe)</td>
                <td>@Html.DisplayFor(modelItem => item.lctn_tpe_dsc)</td>
                <td>@Html.DisplayFor(modelItem => item.lctn_tpe_active)</td>

                <td>
                    @Html.ActionLink(" ", "EditLocationType", "Home", new { @typeId = @item.lctn_tpe_Id}, new { @class = "btn btn-warning fa fa-pencil" }) 
                    @Html.ActionLink(" ", "DeleteLocationType", "Home", new { @type = @item.lctn_tpe, @desc = item.lctn_tpe_dsc}, new { @class = "btn btn-danger fa fa-trash" })

                </td>


            </tr>
        }
    }
</table>



<script>
    function deletDevice(e) {
        debugger;
        if (confirm("Are you sure you want to delete this?")) {
            var id = e.name;
            window.location.href = '/Home/deleteDevice?Id=' + id;
        }
    }
</script>